@PrimaryButtonStyle = TextButtonStyle(
    Default: (Background: #1a4a8a, LabelStyle: (FontSize: 14, TextColor: #d0e8ff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
    Hovered: (Background: #2a5a9a, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
    Pressed: (Background: #0a3a7a, LabelStyle: (FontSize: 14, TextColor: #d0e8ff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);
@SecondaryButtonStyle = TextButtonStyle(
    Default: (Background: #2b3542, LabelStyle: (FontSize: 14, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
    Hovered: (Background: #3b4552, LabelStyle: (FontSize: 14, TextColor: #b6c9de, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
    Pressed: (Background: #1b2532, LabelStyle: (FontSize: 14, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

Group {
    Anchor: (Full: 0);
    Background: #000000(0.6);
    LayoutMode: CenterMiddle;

    Group #EntrenarPanel {
        Anchor: (Width: 420, Height: 440);
        Background: #141c26(0.98);
        LayoutMode: Top;

        Group {
            Anchor: (Height: 3);
            Background: #00bfff;
        }

        Group {
            Anchor: (Height: 56);
            Background: #0a1119(0.95);
            LayoutMode: CenterMiddle;
            Label {
                Text: "Entrenamiento";
                Anchor: (Height: 28);
                Style: LabelStyle(FontSize: 22, TextColor: #00bfff, RenderBold: true, HorizontalAlignment: Center);
            }
        }

        Group {
            Anchor: (Height: 1);
            Background: #2b3542;
        }

        Group {
            FlexWeight: 1;
            LayoutMode: Top;
            Padding: (Horizontal: 20, Vertical: 14);

            Group {
                Anchor: (Height: 36);
                Background: #0a1119(0.95);
                LayoutMode: CenterMiddle;
                Label #LabelEnergias {
                    Text: "Energia A: ?  |  Energia B: ?";
                    Anchor: (Height: 18);
                    Style: LabelStyle(FontSize: 13, TextColor: #4aff7f, HorizontalAlignment: Center);
                }
            }

            Group { Anchor: (Height: 12); }

            Label {
                Text: "ELIGE UN STAT (cuesta 15 energia):";
                Anchor: (Height: 16);
                Style: LabelStyle(FontSize: 11, TextColor: #6e7da1, RenderUppercase: true);
            }

            Group { Anchor: (Height: 8); }

            Group {
                Anchor: (Height: 44);
                LayoutMode: Left;
                TextButton #BtnAtk {
                    Text: "ATK - Ataque";
                    Anchor: (Width: 186);
                    Style: @PrimaryButtonStyle;
                }
                Group { Anchor: (Width: 8); }
                TextButton #BtnDef {
                    Text: "DEF - Defensa";
                    FlexWeight: 1;
                    Style: @SecondaryButtonStyle;
                }
            }

            Group { Anchor: (Height: 8); }

            Group {
                Anchor: (Height: 44);
                LayoutMode: Left;
                TextButton #BtnSpd {
                    Text: "SPD - Velocidad";
                    Anchor: (Width: 186);
                    Style: @PrimaryButtonStyle;
                }
                Group { Anchor: (Width: 8); }
                TextButton #BtnWis {
                    Text: "WIS - Sabiduria";
                    FlexWeight: 1;
                    Style: @SecondaryButtonStyle;
                }
            }

            Group { Anchor: (Height: 8); }

            TextButton #BtnHp {
                Text: "HP - Vitalidad maxima";
                Anchor: (Height: 44);
                Style: @PrimaryButtonStyle;
            }

            Group { Anchor: (Height: 16); }

            Group {
                Anchor: (Height: 1);
                Background: #2b3542;
            }

            Group { Anchor: (Height: 10); }

            Label #Resultado {
                Text: "";
                Anchor: (Height: 20);
                Style: LabelStyle(FontSize: 13, TextColor: #d0e8ff, HorizontalAlignment: Center);
            }

            Group { FlexWeight: 1; }

            Group {
                Anchor: (Height: 1);
                Background: #2b3542;
            }

            Group { Anchor: (Height: 10); }

            Group {
                Anchor: (Height: 40);
                LayoutMode: Center;
                TextButton #BtnVolver {
                    Text: "Volver";
                    Anchor: (Width: 160, Height: 36);
                    Style: @SecondaryButtonStyle;
                }
            }
        }

        Group {
            Anchor: (Height: 3);
            Background: #00bfff;
        }
    }
}
