@PrimaryButtonStyle = TextButtonStyle(
    Default: (Background: #1a4a8a, LabelStyle: (FontSize: 15, TextColor: #d0e8ff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
    Hovered: (Background: #2a5a9a, LabelStyle: (FontSize: 15, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
    Pressed: (Background: #0a3a7a, LabelStyle: (FontSize: 15, TextColor: #d0e8ff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);
@SecondaryButtonStyle = TextButtonStyle(
    Default: (Background: #2b3542, LabelStyle: (FontSize: 14, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
    Hovered: (Background: #3b4552, LabelStyle: (FontSize: 14, TextColor: #b6c9de, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
    Pressed: (Background: #1b2532, LabelStyle: (FontSize: 14, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

Group {
    Anchor: (Full: 0);
    Background: #000000(0.6);
    LayoutMode: CenterMiddle;

    Group #MainPanel {
        Anchor: (Width: 360, Height: 360);
        Background: #141c26(0.98);
        LayoutMode: Top;

        Group {
            Anchor: (Height: 3);
            Background: #00bfff;
        }

        Group {
            Anchor: (Height: 60);
            Background: #0a1119(0.95);
            LayoutMode: CenterMiddle;
            Label {
                Text: "DigiTale";
                Anchor: (Height: 32);
                Style: LabelStyle(FontSize: 28, TextColor: #00bfff, RenderBold: true, HorizontalAlignment: Center);
            }
        }

        Group {
            Anchor: (Height: 1);
            Background: #2b3542;
        }

        Group {
            FlexWeight: 1;
            LayoutMode: Top;
            Padding: (Full: 20);

            TextButton #BtnEstado {
                Text: "Ver Estado del Equipo";
                Anchor: (Height: 44);
                Style: @PrimaryButtonStyle;
            }

            Group { Anchor: (Height: 8); }

            TextButton #BtnEvolucionar {
                Text: "Evolucionar";
                Anchor: (Height: 44);
                Style: @PrimaryButtonStyle;
            }

            Group { Anchor: (Height: 8); }

            TextButton #BtnEntrenar {
                Text: "Entrenar";
                Anchor: (Height: 44);
                Style: @PrimaryButtonStyle;
            }

            Group { Anchor: (Height: 8); }

            TextButton #BtnCuidar {
                Text: "Cuidar y Alimentar";
                Anchor: (Height: 44);
                Style: @PrimaryButtonStyle;
            }

            Group { FlexWeight: 1; }

            Group {
                Anchor: (Height: 1);
                Background: #2b3542;
            }

            Group { Anchor: (Height: 10); }

            TextButton #BtnCerrar {
                Text: "Cerrar";
                Anchor: (Height: 36);
                Style: @SecondaryButtonStyle;
            }
        }

        Group {
            Anchor: (Height: 3);
            Background: #00bfff;
        }
    }
}
