$Common = "Common.ui";

@BgStyle = PatchStyle(TexturePath: "bg_dark.png");
@BtnStyle = PatchStyle(TexturePath: "btn_default.png");

Group {
  LayoutMode: Center;
  Group #MainPanel {
    Anchor: (Width: 360, Height: 310);
    Background: (Color: #1A1A2E);
    LayoutMode: Top;

    Label #Title {
      Style: (FontSize: 20, Alignment: Center, Bold: true, Color: #E94560);
      Anchor: (Top: 12, Height: 28);
      Text: "DigiTale";
      Padding: (Full: 4);
    }
    Label #Subtitle {
      Style: (FontSize: 10, Alignment: Center, Color: #A8A8C0);
      Anchor: (Top: 2, Height: 18);
      Text: "Tu aventura Digimon comienza aqui";
    }

    Group #BtnEstado {
      Anchor: (Top: 16, Width: 280, Height: 38);
      Background: (Color: #16213E);
      LayoutMode: Center;
      Label {
        Style: (FontSize: 13, Alignment: Center, Color: #4ECDC4);
        Text: "Ver Estado del Equipo";
      }
    }
    Group #BtnEvolucionar {
      Anchor: (Top: 8, Width: 280, Height: 38);
      Background: (Color: #16213E);
      LayoutMode: Center;
      Label {
        Style: (FontSize: 13, Alignment: Center, Color: #FFD700);
        Text: "Evoluciones";
      }
    }
    Group #BtnEntrenar {
      Anchor: (Top: 8, Width: 280, Height: 38);
      Background: (Color: #16213E);
      LayoutMode: Center;
      Label {
        Style: (FontSize: 13, Alignment: Center, Color: #FF6B6B);
        Text: "Entrenar";
      }
    }
    Group #BtnCuidar {
      Anchor: (Top: 8, Width: 280, Height: 38);
      Background: (Color: #16213E);
      LayoutMode: Center;
      Label {
        Style: (FontSize: 13, Alignment: Center, Color: #95E77E);
        Text: "Cuidar / Alimentar";
      }
    }
    Group #BtnCerrar {
      Anchor: (Top: 8, Width: 280, Height: 32);
      Background: (Color: #2D2D2D);
      LayoutMode: Center;
      Label {
        Style: (FontSize: 12, Alignment: Center, Color: #888888);
        Text: "Cerrar";
      }
    }
  }
}
